{
  "repositories": [
    {
      "type": "composer",
      "url": "http://composer.typo3.org/"
    }
  ],
  "require": {
    "ext-gd": "*",
    "ext-mysqli": "*",
    "ext-soap": "*",
    "ext-zip": "*",
    "ext-zlib": "*",
    "ext-openssl": "*",
    "typo3/cms": "dev-master#0c60eeb74576c76ffe8729f625f3281827ff45fa",
    "vlucas/phpdotenv": "^2.0",
    "cedricziel/typo3-cloudoconfiguration": "dev-master",
    "heroku/heroku-buildpack-php": "^76.0"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "web"
    }
  },
  "name": "cedricziel/typo3-heroku-distribution",
  "authors": [
    {
      "name": "Cedric Ziel",
      "email": "cedric@cedric-ziel.com"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "CedricZiel\\TYPO3\\CloudoConfiguration\\InstallHooks::writeAutoConfiguration"
    ],
    "post-update-cmd": [
      "CedricZiel\\TYPO3\\CloudoConfiguration\\InstallHooks::writeAutoConfiguration"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  }
}
